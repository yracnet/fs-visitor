{
  "name": "fs-visitor",
  "version": "0.2.2",
  "type": "module",
  "description": "A Node.js library for recursively listing files and directories with customizable filtering and sorting options.",
  "keywords": [
    "file system",
    "directory",
    "listing",
    "filtering",
    "sorting",
    "Node.js",
    "fs",
    "fs-extra",
    "glob",
    "fast-glob"
  ],
  "files": [
    "dist",
    "LICENSE"
  ],
  "license": "MIT",
  "author": "Willyams Yujra <yracnet@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/yracnet/fs-visitor"
  },
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    },
    "./filter": {
      "types": "./dist/filter.d.ts",
      "import": "./dist/filter.js",
      "require": "./dist/filter.cjs"
    }
  },
  "homepage": "https://github.com/yracnet/fs-visitor",
  "bugs": "https://github.com/yracnet/fs-visitor/issues",
  "scripts": {
    "prepublish": "tsup",
    "build": "tsup",
    "dev": "node --loader ts-node/esm ./test/basic.ts"
  },
  "dependencies": {},
  "peerDependencies": {
    "minimatch": "^9.0.3"
  },
  "devDependencies": {
    "@types/node": "^18.11.15",
    "minimatch": "^9.0.3",
    "ts-node": "^10.9.2",
    "tsup": "^6.5.0",
    "typescript": "^5.0.2"
  }
}
